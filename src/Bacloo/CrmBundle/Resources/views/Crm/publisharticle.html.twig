{% if auteur == 'dupont' %}
 <div class="row">
		<div class="col-sm-12 col-md-12">
            <div class="panel panel-default">
                <div class="panel-body">
					<form class="form-horizontal" action="{{ path('bacloocrm_publish', {'artvue': artvue}) }}" method="post" {{form_enctype(form) }}> 
					<div class="form-group">			
						<div class="col-md-12"> 
							<div class="col-md-6 column"> 							
								<div class="col-md-12 pull-left">
								 {{ form_widget(form.titre, { 'attr' : { 'class' : 'form-control', placeholder : 'Saisissez un titre ici', 'disabled':'disabled' } })  }}
								</div> 							
							</div>
							<div class="col-md-6 column"> 					                   
							    <div class="pull-right">                     
									{{ form_label(form.sharepartenaire, 'Publier uniquement auprès de mes partenaires ')}} {{ form_widget(form.sharepartenaire, { 'attr':{'disabled':'disabled'} }) }}
							    </div>
							</div>
						</div>	
					</div>
					<div class="form-group">
					  <div class="col-md-12">                     
						{{ form_widget(form.texte, { 'attr' : { 'class' : 'form-control' ,'rows' : '5', 'disabled':'disabled'} })  }}
					  </div>
					</div>
					<div class="col-md-12 col-sm-12 col-xs-12">
					 <div class="form-group ">
						 <div class="col-md-10 column"> 	
							<div class="form-group">
							  <label for="checkboxes-inline" class="control-label col-sm-4">Choisissez une catégorie :</label>
							  <div class="checkbox col-sm-8 pull-left">
								{% for choix in form.categorie %}
									{{ form_label(choix) }} {{ form_widget(choix, { 'attr':{'disabled':'disabled'} }) }}
								{% endfor %}							  

							  </div>
							</div>	
						 </div>
						 <div class="col-md-2 column"> 
							   <div class="pull-right">
								 <input class="btn btn-primary" value="Publier"/>	
							   </div>										  
						 </div>
					 </div>
					</div>					 
	
					<div class="hidden">{{ form_widget(form.auteur, { 'value' : auteur }) }}</div>
					<div class="hidden">{{ form_widget(form.transfereur) }}</div>
						{{ form_row(form._token) }}
					
					</form>
                </div>
            </div>
        </div>
	</div>
	
