{% extends "BaclooCrmBundle::layout.html.twig" %}
{% block body %}
	<div class="container">
		<div class="row clearfix">
			<div class="col-md-12 column">
				<div class="row clearfix">
					<div class="col-md-12 column">
						<table>
							<tr>
								<td class="col-md-12">
									<h3>
										Importer des données externes
									</h3>
										{% for flashMessage in app.session.flashbag.get('BRAVO') %}
											<div class="alert alert-success">
											{% if flashMessage > 1 %}
												{{ flashMessage }} lignes ont été importées.
											{% else %}
												{{ flashMessage }} ligne a été importé.
											{% endif %}	
											</div>											
										{% endfor %}
										{% for flashMessage in app.session.flashbag.get('Erreur') %}
											<div class="alert alert-success">
												<strong>{{ flashMessage }}</strong>
											</div>
										{% endfor %}								
								</td>
								<td class="col-md-6">
									 
								</td>
							</tr>
						</table>
					</div>
				</div>
				<div class="tabbable" id="tabs-421784">
					<ul class="nav nav-tabs">
						<li class="active">
							<a href="#panel-1" data-toggle="tab">Importer des fiches</a>
						</li>				
						<li>
							<a href="#panel-2" data-toggle="tab">Importer des contacts</a>
						</li>
						<li>
							<a href="#panel-3" data-toggle="tab">Importer mon historique</a>
						</li>

					</ul>
					<div class="tab-content">
						<div  class="tab-pane active" id="panel-1">						
							{{ render(controller("AvroCsvBundle:Import:upload", {'id':0, 'alias': 'fiche'})) }}
						</div>
						<div class="tab-pane" id="panel-2">
							{{ render(controller("AvroCsvBundle:Import:upload", {'id':0, 'alias': 'contact'})) }}
						</div>
						<div class="tab-pane" id="panel-3">
							{{ render(controller("AvroCsvBundle:Import:upload", {'id':0, 'alias': 'event'})) }}
						</div>			
					</div>
				</div>
			</div>
		</div>
	</div>

{% endblock %}