		{% if gri.type == 'Camion nacelle' %}
			{% if ce == 1 %}			
				<h4><span style="text-align:center">Camions nacelle</span></h4>
				<table cellpadding="1">
					<tr style="background-color:#F55F14;color:white;font-weight:bold;">
						<td width="325">Description</td><td width="60">1j</td><td width="60">2 à 5j</td><td width="60">6 à 15j</td><td width="60">+ de 15j</td>
					</tr>	
			{% set ce = ce + 1 %}
			{% endif %}
			{% if cei is divisible by(2) %}
				<tr style="background-color:#e2e0e0">
			{% else %}
				<tr>
			{% endif %}
					<td>{{ gri.typemachine }}</td><td>{{ gri.loyerp1 }}</td><td>{{ gri.loyerp2 }}</td><td>{{ gri.loyerp3 }}</td><td>{{ gri.loyerp4 }}</td>
				</tr>
		{% endif %}
