{% extends "BaclooCrmBundle::layout.html.twig" %}
{% block body %}
<div class="row clearfix">
{% if sendok == 'ok' %}
				<div class="modal-dialog">
					<div class="modal-content">
						<div class="modal-header">
							 <a class="close" href="{{ previous }}">×</a>
							<h4 class="modal-title" id="myModalLabel">
								OK
							</h4>
						</div>
						<div class="modal-body">
							votre message a bien été envoyé
						</div>
						<div class="modal-footer">
											{% if type == 'vendeur' %}
												<a class="btn btn-primary" href="{{ previous }}"><span>Fermer</span></a>
											{% else %}
												<a class="btn btn-primary" href="{{ previous }}"><span>Fermer</span></a>
											{% endif %}						
							
						</div>
					</div>					
				</div>
{% elseif sendok == 'favoris' %}
			<div class="modal-dialog">
				<div class="modal-content">
					<form role="form" action="{{ path('bacloocrm_sendmessagefav', {'vemail': vemail, 'type': type, 'rais' : rais} ) }}" method="post" {{form_enctype(form) }}>
						<fieldset>					
						<div class="modal-header">
						<a class="close" href="{{ previous }}">×</a>
							<h4 class="modal-title" id="myModalLabel">
								Votre message privé à {% if nom is not empty %} {{ nom }} {{ prenom }}{% else %}{{ vemail }}{% endif %}
							</h4>
						</div>
						<div class="modal-body">
						{% set date = 'now'|date('Y-m-d') %}
						{{ form_widget(form.date, { 'attr' : { 'value' : date }})  }}
						{{ form_widget(form.lu, { 'attr' : { 'value' : 'nok' }})  }}

										<div class="form-group">
										  <label for="objet">Objet</label>
											{% if type == 'vendeur' %}
												{{ form_widget(form.objet, { 'attr' : { 'class' : 'form-control', 'value' : 'Demande de précision concernant un de vos contacts' }})  }}
											{% elseif type == 'favoris' %}
												{{ form_widget(form.objet, { 'attr' : { 'class' : 'form-control', 'value' : '' }})  }}
											{% else %}
												{{ form_widget(form.objet, { 'attr' : { 'class' : 'form-control', 'value' : 'Un de mes contacts peut vous intéresser' }})  }}
											{% endif %}
										</div>

										<div id='messages' class="form-group">
											  <label for="message">Message</label>
												{{ form_widget(form.message, { 'attr' : { 'class' : 'form-control' ,'rows' : '5'}} )  }}
										</div>											
						{{ form_row(form._token) }}
						</div>
						<div class="modal-footer"><a class="btn btn-default" href="{{ previous }}">Close</a><input type="submit" class="btn btn-primary" />
						</div>
						</fieldset>							
					</form>						
				</div>					
			</div>				
{% else %}

			<div class="modal-dialog">
				<div class="modal-content">
					<form role="form" action="{{ path('bacloocrm_sendmessage', {'vemail': vemail, 'type': type, 'rais' : rais} ) }}" method="post" {{form_enctype(form) }}>
						<fieldset>					
						<div class="modal-header">
						<a class="close" href="{{ previous }}">×</a>
							<h4 class="modal-title" id="myModalLabel">
								Votre message au vendeur {{ nom }} {{ prenom }}
							</h4>
						</div>
						<div class="modal-body">
						{% set date = 'now'|date('Y-m-d') %}
						{{ form_widget(form.date, { 'attr' : { 'value' : date }})  }}
						{{ form_widget(form.lu, { 'attr' : { 'value' : 'nok' }})  }}

										<div class="form-group">
										  <label for="objet">Objet</label>
											{% if type == 'vendeur' %}
												{{ form_widget(form.objet, { 'attr' : { 'class' : 'form-control', 'value' : 'Demande de précision concernant un de vos contacts' }})  }}
											{% else %}
												{{ form_widget(form.objet, { 'attr' : { 'class' : 'form-control', 'value' : 'Un de mes contacts peut vous intéresser' }})  }}
											{% endif %}
										</div>

										<div id='messages' class="form-group">
											  <label for="message">Message</label>
												{{ form_widget(form.message, { 'attr' : { 'class' : 'form-control' ,'rows' : '5'}} )  }}
										</div>											
						{{ form_row(form._token) }}
						</div>
						<div class="modal-footer"><a class="btn btn-default" href="{{ previous }}">Close</a><input type="submit" class="btn btn-primary" />
						</div>
						</fieldset>							
					</form>						
				</div>					
			</div>
{% endif %}
</div>		
{% endblock %}