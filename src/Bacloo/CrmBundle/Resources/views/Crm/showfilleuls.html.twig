{% extends "BaclooCrmBundle::layout.html.twig" %}
{% block body %}

			<div class="panel panel-default">
				<div class="panel-heading">
					<h3 class="panel-title">
						<h3>Liste des utilisateurs parrainés ({{ nbfilleuls }})</h3>
						Chaque utilisateur parrainé vous rapporte 2 points si les champs activité, mots clés et activité visée sont renseignés.
					</h3>
				</div>
				<div class="panel-body">
					{# Partie filleuls #}
					<div class="col-md-12">
					{% if nbfilleuls == 0 %}
						<center>Vous n'avez aucun filleuls pour le moment</center>
					{% else %}
							<fieldset>
							<div class="row clearfix">
								<div class="col-md-12">
										<table id="bacloo2" class="table table-bordered">
										<thead>
											<tr id="dibac">
												<th>
													Dernière connexion
												</th>								
												<th>
													Nom d'utilisateur
												</th>
												<th>
													Nom
												</th>
												<th>
													Prénom
												</th>
												<th>
													Activité
												</th>
												<th>
													Mots clés
												</th>
												<th>
													Activité visée
												</th>
												<th>
													Points rapportés
												</th>
												<th>
													
												</th>							
											</tr>
										</thead>				
								{% for filleul in filleuls %}
									<tr>
										<td>
										{{ filleul.lastLogin|date("d/m/Y") }}
										</td>
										<td>
										{{ filleul.username }}
										</td>
										<td>
										{{ filleul.nom }}
										</td>
										<td>
										{{ filleul.prenom }}
										</td>
										<td>
										{{ filleul.activite }}
										</td>
										<td>
										{{ filleul.tags }}
										</td>
										<td>
										{{ filleul.actvise }}
										</td>
										<td>
										{% if filleul.point == 2 %}{{ filleul.point }}{% else %}Profil incomplet{% endif %}
										</td>
										<td>
											<a class="btn btn-primary" href="{{ path('bacloocrm_sendmessage', {'vemail': filleul.username ?:0, 'type': 'favoris', 'rais': '0' }) }}"><span class="glyphicon glyphicon-envelope" aria-hidden="true"></span>
										</td>
									</tr>		
								{% endfor %}
									</table>
								</div>
							</div>								
							</fieldset>

						<center>
							<ul class="pagination">
									{# On utilise la fonction range(a, b) qui crée un tableau de valeurs entre a et b #}
									{% for p in range(1, nombrePage) %}
									<li{% if p == page %} class="active"{% endif %}>
										<a href="{{ path('bacloocrm_showlistinvitations', {'page': p}) }}">{{ p }}</a>
									</li>
									{% endfor %}
							</ul>
						</center>						
						{% endif %}
					</div>
				</div>
			</div>
{% endblock %}
