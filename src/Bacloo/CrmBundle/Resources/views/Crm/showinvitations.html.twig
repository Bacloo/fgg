{% extends "BaclooCrmBundle::layout.html.twig" %}
{% block body %}

			<div class="panel panel-default">
				<div class="panel-heading">
					<h3 class="panel-title">
						<h3>Liste des invitations envoyées ({{ nbinvit }})</h3>
					</h3>
				</div>
				<div class="panel-body">
					{# Partie invitations #}
					<div class="col-md-12">
					{% if nbinvit == 0 %}
						<center>Aucune invitation envoyée pour le moment</center>
					{% else %}
							<fieldset>
							<div class="row clearfix">
								<div class="col-md-12">
										<table id="bacloo2" class="table table-bordered">
										<thead>
											<tr id="dibac">
												<th>
													Date
												</th>								
												<th>
													Email
												</th>
												<th>
													Points rapportés
												</th>							
											</tr>
										</thead>				
								{% for invit in invitations %}
									<tr>
										<td>
										{{ invit.date }}
										</td>
										<td>
										{{ invit.email }}
										</td>
										<td>
										{{ invit.point }}
										</td>
									</tr>		
								{% endfor %}
									</table>
								</div>
							</div>								
							</fieldset>

						<center>
							<ul class="pagination">
									{# On utilise la fonction range(a, b) qui crée un tableau de valeurs entre a et b #}
									{% for p in range(1, nombrePage) %}
									<li{% if p == page %} class="active"{% endif %}>
										<a href="{{ path('bacloocrm_showlistinvitations', {'page': p}) }}">{{ p }}</a>
									</li>
									{% endfor %}
							</ul>
						</center>						
						{% endif %}
					</div>
				</div>
			</div>
{% endblock %}
