{% extends "BaclooCrmBundle::layout.html.twig" %}
{% block body %}
<h3>Liste des utilisateurs interressés par le client {{ raisonsociale }}</h3>
{# Partie Prospot #}

		<div class="row clearfix">
					<table id="bacloo2" class="table table-bordered">
					<thead>
						<tr id="dibac">
							<th>
								Nom
							</th>
							<th>
								Prénom
							</th>
							<th>
								Activité
							</th>
							<th>
								Affaires recherchés
							</th>
							<th>
								Mots clés
							</th>
							<th>
								Activité(s) visée(s)
							</th>
							<th>
							</th>
							<th>
							</th>							
						</tr>
					</thead>
					{% for listi in listint %}
						<tr class="dibacloo4">
							<td>
								<div class="form-group">
								  <div class="col-md-12">
									{{ listi.nom }}
								  </div>
								</div>
							</td>
							<td>
								<div class="form-group">
								  <div class="col-md-12">
									{{ listi.prenom }}
								  </div>
								</div>
							</td>
							<td>
								<div class="form-group">
								  <div class="col-md-12">
									{{ listi.activite }}
								  </div>
								</div>
							</td>				
							<td>
								<div class="form-group">
								  <div class="col-md-12">
									{{ listi.descRech }}
								  </div>
								</div>
							</td>
							<td>
								<div class="form-group">
								  <div class="col-md-12">
									{{ listi.tags }}
								  </div>
								</div>
							</td>
							<td>
								<div class="form-group">
								  <div class="col-md-12">
									{{ listi.actvise }}
								  </div>
								</div>
							</td>
							<td class="col-md-1">
								<a class="btn btn-success" href="{{ path('bacloocrm_sendmessage', {'vemail': listi.username, 'type': 'acheteur', 'rais': listi.ficheid }) }}"><span class="glyphicon glyphicon-envelope" aria-hidden="true"></span>  {{ listi.username }}</a>
							</td>
							<td class="col-md-1">
								<a class="btn btn-warning" href="{{ path('bacloocrm_publicprofile', {'user': listi.username }) }}"><span class="glyphicon glyphicon-user" aria-hidden="true"></span> Voir son profil</a>
							</td>
						</tr>
					{% endfor %}	
					</table>	



		</div>

{# Fin Partie Prospot #}
{% endblock %}
