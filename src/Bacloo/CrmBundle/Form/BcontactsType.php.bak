<?php

namespace Bacloo\CrmBundle\Form;

use Symfony\Component\Form\AbstractType;
use Symfony\Component\Form\FormBuilderInterface;
use Symfony\Component\OptionsResolver\OptionsResolverInterface;

class BcontactsType extends AbstractType
{
        /**
     * @param FormBuilderInterface $builder
     * @param array $options
     */
    public function buildForm(FormBuilderInterface $builder, array $options)
    {
        $builder
            ->add('dateCrea', 'date', array('widget' => 'single_text',
										'input' => 'datetime',
										'format' => 'dd/MM/yyyy',
										'required' => false,
										'attr' => array('class' => 'contactdate'),
										))
            ->add('civilite', 'choice', array(
					'choices' => array('M.' => 'M.', 'Mme' => 'Mme'),
					'preferred_choices' => array('M.')))
            ->add('nom', 'text', array('required' => false))
            ->add('prenom', 'text', array('required' => false))
            ->add('fonction', 'text', array('required' => false))
            ->add('tel1', 'text', array('required' => false))
            ->add('tel2', 'text', array('required' => false))
            ->add('email', 'text', array('required' => false))
            ->add('commentaire', 'text', array('required' => false))
            ->add('entreprise', 'text', array('required' => false))
            ->add('user', 'text', array('required' => false))
            ->add('mailingOk', 'checkbox', array('required' => false))
            ->add('recoitfact', 'checkbox', array('required' => false))
            ->add('aVendre', 'checkbox', array('required' => false))
            ->add('cp', 'text', array('required' => false))
        ;
    }
    
    /**
     * @param OptionsResolverInterface $resolver
     */
    public function setDefaultOptions(OptionsResolverInterface $resolver)
    {
        $resolver->setDefaults(array(
            'data_class' => 'Bacloo\CrmBundle\Entity\Bcontacts'
        ));
    }

    /**
     * @return string
     */
    public function getName()
    {
        return 'bacloo_crmbundle_bcontacts';
    }
}
